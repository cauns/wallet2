<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <h1>{{text_list }}</h1>
      <ul class="breadcrumb">
          {% for breadcrumb in breadcrumbs %}      
          <li><a href="{{breadcrumb.href}}">{{breadcrumb.text}}</a></li>
          {% endfor %}
